#include <iostream>
#include <cmath>
using namespace std;

int main() {
    const float pi = 3.14159;
    float radius, volume;

    cout << "Enter the radius of the sphere (in cm): ";
    cin >> radius;

    volume = (4.0/3.0) * pi * pow(radius, 3);
    cout << "The volume of the sphere is: " << volume << " cubic cm" << endl;

    return 0;
}
